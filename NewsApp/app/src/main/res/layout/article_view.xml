<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutItem">

    <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hinh1" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="Tim Cook chưa 'lên đời' iPhone 13"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/txtTenSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Nhiều người dùng Trung Quốc tỏ ra ngạc nhiên khi phát hiện CEO Apple vẫn dùng chiếc iPhone 12 Pro Max."
                android:textSize="15dp"
                android:textColor="#676767"
                android:id="@+id/txtGiaSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:layout_marginTop="25dp"
            android:background="#E6E6E6"
            android:layout_below="@id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
</RelativeLayout>