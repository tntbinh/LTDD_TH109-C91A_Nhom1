<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:id="@+id/bmp_programme_ll"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/linearLayout_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="?attr/cardbackground"
            tools:ignore="MissingConstraints">


            <ImageButton
                    android:id="@+id/btnVNE"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/logo_youtube"
                    android:scaleY="1" />

            <ImageButton
                    android:id="@+id/btnTNien"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/logo_facebook"
                    android:scaleY="1" />

            <ImageButton
                    android:id="@+id/btnTTre"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/logo_vnexpress"
                    android:scaleY="1" />

        <WebView
                android:id="@+id/webView_YoutubeResult"
                android:background="?attr/backgroudcommon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>